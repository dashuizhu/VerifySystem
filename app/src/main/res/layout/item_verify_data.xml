<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/split_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_device_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_hum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color" />

        <TextView
            android:id="@+id/verify_data_voltage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color"/>

        <TextView
            android:id="@+id/tv_verify_data_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/recycler_view_text_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/split_color"/>
    </LinearLayout>/

</LinearLayout>

